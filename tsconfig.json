{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "rootDir": "./",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "emitDeclarationOnly": true,
    "target": "ES2022",
    "composite": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./dev/next-env.d.ts"],
      "paths": {
      "@littledash/plugin-lms": ["./src/exports"],
      "@littledash/plugin-lms/ui": ["./src/exports/ui"],
      "@littledash/plugin-lms/utilities/*": ["./src/exports/utilities"],
      "@littledash/plugin-lms/helpers/*": ["./src/exports/helpers"],
      "@littledash/plugin-lms/providers": ["./src/exports/providers"]
    }
}
